{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "src",
    "noImplicitAny": false,
    "module": "es6",
    "moduleResolution": "Node",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@app-types": ["types/index.ts"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@constants": ["constants/index.ts"]
    }
  }
}